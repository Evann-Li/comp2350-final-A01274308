<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <link rel="stylesheet" href="bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</head>
<body>
<section class="section">
    <div class="maincolumns columns is-desktop is-vcentered">
        <div class="column is-10 is-offset-1 notification is-info is-light box container">
            <div class="title">
                Products
            </div>
            <% if (locals.allProducts) { %>
                <div class="table-container">
                    <table class="table is-bordered is-hoverable is-striped is-narrow">
                        <thead>
                        <tr>
                            <th> Name </th>
                            <th> Description </th>
                            <th> Cost </th>
                            <th> Quantity </th>
                            <th> &nbsp; </th>
                        </tr>
                        </thead>
                        <% let totalCost = 0; %>
                        <% let i=0; %>
                        <% for(i=0; i < allProducts.length; i++) { %>
                        <% totalCost += allProducts[i].cost * allProducts[i].quantity; %>
                            <tr>
                                <td><%= allProducts[i].item_name %></td>
                                <td><%= allProducts[i].item_description %></td>
                                <td><%= allProducts[i].cost %></td>
                                <td><%= allProducts[i].quantity %></td>

                                <td>
                                    <a href="/upItem?id=<%= allProducts[i].purchase_item_id %>">
                                        <span class="icon is-small">
                                            <i class="fas fa-caret-square-up"></i>
                                        </span>
                                    </a>
                                </td>
                                <td>
                                    <a href="/downItem?id=<%= allProducts[i].purchase_item_id %>">
                                        <span class="icon is-small">
                                            <i class="fas fa-caret-square-down"></i>
                                        </span>
                                    </a>
                                </td>
                                <td>
                                    <a href="/deleteItem?id=<%= allProducts[i].purchase_item_id %>">
                                        <span class="icon is-small">
                                            <i class="fas fa-trash-alt"></i>
                                        </span>
                                    </a>
                                </td>
								
                            </tr>
                        <% } %>
                        <tfoot>
                        <tr>
                            <td colspan="4">
                                There are <%= i %> items for a total of $<%= totalCost.toFixed(2) %>.
                            </td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
                <form action="addRestaurant" method="post">
                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Add New Product</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <p class="control is-expanded">
                                    <input name="name" class="input" type="text" placeholder="Name">
                                </p>
                            </div>
                            <div class="field">
                                <p class="control is-expanded">
                                    <input name="description" class="input" type="text" placeholder="Description">
                                </p>
                            </div>
                            <div class="field">
                                <p class="control is-expanded">
                                    <input name="cost" class="input" type="text" placeholder="Cost">
                                </p>
                            </div>
                            <div class="field">
                                <p class="control is-expanded">
                                    <input name="quantity" class="input" type="text" placeholder="Quantity">
                                </p>
                            </div>
                            <div class="field">
                                <button class="button is-link">
                                    <span>Add</span>
                                    <span class="icon is-small">
                                        <i class="fas fa-plus"></i>
                                    </span>
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            <% } %>
        </div>
    </div>
</section>
</body>
</html>
